---
// No props needed
---
<section id="demo" class="py-16 bg-white">
    <div class="max-w-2xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-semibold mb-4">Request a Demo</h2>
      <p class="text-gray-600 mb-6">Fill out the form below and our team will reach out to schedule your personalized walkthrough.</p>
      <form class="grid gap-4 text-left" name="demo-request" method="POST" data-netlify="true">
        <input type="text" name="name" placeholder="Your Name" class="p-3 border rounded w-full" required />
        <input type="email" name="email" placeholder="Your Email" class="p-3 border rounded w-full" required />
        <input type="text" name="company" placeholder="Company Name" class="p-3 border rounded w-full" />
        <textarea name="message" rows="4" placeholder="Any specific requirements?" class="p-3 border rounded w-full"></textarea>
        <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 w-full">Submit Request</button>
      </form>
    </div>
  </section>
  