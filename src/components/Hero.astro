---
// No props needed
---

<section class="relative py-20 overflow-hidden">
  <!-- Background Image Layer -->
  <div class="absolute inset-0 bg-[url('/images/dairy-hero.jpg')] bg-cover bg-center opacity-50 z-[-1]"></div>

  <!-- Foreground Content -->
  <div class="relative z-10 w-full grid grid-cols-12 gap-4 md:gap-6 px-4 md:px-12 items-start">

    <!-- Logo (3 columns) -->
    <div class="col-span-12 md:col-span-3 flex justify-center md:justify-start md:items-start items-center">
      <img
        src="/logo-dairyvista.png"
        alt="DairyVista Logo"
        class="w-20 h-20 object-contain drop-shadow-md animate-fade-in"
      />
    </div>

    <!-- Text & CTA (9 columns) -->
    <div class="col-span-12 md:col-span-9 text-center md:text-left max-w-3xl md:ml-0">
      <h1 class="text-4xl font-bold mb-4 text-primary leading-tight animate-fade-up">
        DairyVista ERP Platform
      </h1>
      <p class="text-lg mb-6 text-text leading-relaxed animate-fade-up delay-200">
        Streamline your dairy operations — from production and inventory to billing and last-mile delivery — with our smart, scalable ERP platform tailored for dairy businesses.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start animate-fade-up delay-400">
        <a href="#demo" class="bg-accent text-white px-6 py-3 rounded hover:bg-orange-700 transition duration-300 ease-in-out">
          Request a Demo
        </a>
        <a href="#pricing" class="border border-primary text-primary px-6 py-3 rounded hover:bg-primary hover:text-white transition duration-300 ease-in-out">
          See Pricing
        </a>
      </div>
    </div>
  </div>
</section>
